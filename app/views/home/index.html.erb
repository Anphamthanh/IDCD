<% if current_user %>

  <!-- 
  options to display if there is a 
  student/faculty/admin that has logged in 
  --> 

  <div class="row-fluid">
    <div class="span12">
      <center><h1>Welcome <%= "#{current_user.gtusername}" %></h1></center>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <center>
        <br />
        <%= link_to "Submit a Project", new_project_path(), class: "btn btn-large btn-primary" %>
      </center>
    </div>
  </div>

<% else %>

  <!-- 
  options to display if there is a 
  no user logged in 
  --> 

  <div class="row-fluid">
    <div class="span6">
      <center><h2>Sponsors</h2></center>
    </div>
    <div class="span6">
      <center><h2>Students & Faculty</h2></center>
    </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <center>
        <br />
        <%= link_to "Submit a Project", new_project_path(), class: "btn btn-large btn-primary" %>
	<br>
	<table>
		<tr>
			<th colspan=2>Industry</th>
		</tr>
		<tr>
			<th colspan=2>Blurb about why to get involved</th>
		</tr>
		<tbody>
			<tr>
				<td><img src="PlaceHolder.png"></td>
				<td>Past projects</td>
			</tr>
			<tr>
				<td><img src="PlaceHolder.png"></td>
				<td>Read @ NDA/IP</td>
			</tr>
			<tr>
				<td><img src="PlaceHolder.png"></td>
				<td>Submit a project</td>
			</tr>
		</tbody>
	</table>
      </center>
    </div>
    <div class="span6">
      <center>
        <br />
        <%= link_to "Click here to Login", home_login_with_CAS_path(), class: "btn btn-large btn-primary" %>
      </center>
    </div>
  </div>

<% end %>
