<div class="row-fluid">
  <div class="span12">
    <% if not current_user.is_owner? or current_user.my_group.proposals.count == 0 %>

      <div class="row-fluid">
        <div class="span12">
          No submitted proposals.
        </div>
      </div>

    <% else %>

      <% current_user.my_group.proposals.each do |proposal|  %>
        <div class="row-fluid" style="margin-bottom:20px;">
          <div class="span12 well">

            <div class="row-fluid">
              <div class="span11">

                <dl class="dl-horizontal">

                  <dt><strong>Name:</strong></dt>
                  <dd><%= "#{proposal.project.name}" %></dd>

                  <dt><strong>Description:</strong></dt>
                  <dd><%= "#{proposal.description}" %></dd>

                  <dt><strong>Status:</strong></dt>
                  <dd><%= "#{proposal.status}" %></dd>

                </dl>

              </div>

              <div class="span1">
                <% options = [] %>

                <% options.push({
                  label: "Delete",
                  controller: "proposals",
                  action: "destroy",
                  id: proposal.id,
                  method: "delete",
                  confirm: "Are you sure?"})
                %>

                <% options.push({
                  label: "Edit",
                  controller: "proposals",
                  action: "edit",
                  id: proposal.id,
                  method: "get",
                  confirm: false})
                %>

                <%= render :partial => "shared/dropdown_actions", :locals => {options: options.reverse!} %>

              </div>
            </div>

          </div>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
