<h1>Listing proposals</h1>

<table class="table table-striped">
  <tr>
    <th>Propsal Status</th>
    <th>Group</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @proposals.each do |proposal| %>
  <tr>
    <td><%= ProposalStatusType.find(proposal.proposal_status_type_id).name %></td>
    <td><%= Group.find(proposal.group_id).name %></td>
    <td><%= Project.find(proposal.project_id).name %></td>
    <td><%= link_to 'View Proposal', proposal%></td>
    <td><%= link_to 'Edit', edit_proposal_path(proposal) %></td>
    <td><%= link_to 'Destroy', proposal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

