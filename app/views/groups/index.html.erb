

<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h1>Groups</h1>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h4>Select a group from the list below, or <%= link_to "create a new one.", new_group_path  %></h4>
  </div>
</div>

<div class="row-fluid" style="margin-top: 25px">
  <div class="offset0 span12">

    
    <div class="row-fluid">
      <% count = 0 %>
      <% @groups.each do |group| %>

        <% if count % 3 == 0 %>
          </div>
          <div class="row-fluid">
        <% end %>

        <div class="span4 well">
          <h3><center><%= link_to group.name, group_path(group) %></center></h3>
        </div>

        <% count = count + 1 %>
      <% end %>
    </div>


  </div>
</div>
