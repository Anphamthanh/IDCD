<div class="row-fluid" style="margin-top: 10px;">
  <div class="span12">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#status" data-toggle="tab">Overview</a></li>
      <li><a href="#more_info" data-toggle="tab">More Information</a></li>
    </ul>
  </div>
</div>


<div class="row-fluid">
  <div class="span12">
    <div class="tab-content" style="overflow: visible">

      <div class="tab-pane active" id="status">
        <dl class="dl-horizontal">

          <% if project.company %>
            <dt><strong>Submitted By:</strong></dt>
            <dd><%= project.company.name %></dd>
          <% elsif project.submitter %>
            <dt><strong>Submitted By:</strong></dt>
            <dd><%= "#{project.submitter.name} (#{project.submitter.type})" %></dd>
          <% end %>

          <% if current_user.isAdmin? and project.accepted?%>
            <dt><strong>Semester:</strong></dt>
            <dd><%= project.semester.name %></dd>
          <% end %>

          <% if project.accepted? %>
            <dt><strong>Majors Required:</strong></dt>
            <dd>
            <% counter = project.schools.count - 1 %>
            <% project.schools.each do |s| %>
              <%= "#{s.name}" %>
              <% if counter > 0 %>
                <%= ", " %>
              <% end %>
              <% counter = counter - 1 %>
            <% end %>
            </dd>     
          <% end %> 

          <dt><strong>Number of Proposals:</strong></dt>
          <dd><%= project.proposals.count %></dd>

          <% if ( current_user.isAdmin? or current_user.isFaculty? ) and project.proposals.count > 0 %>
            <dt><strong>Submitted Proposals:</strong></dt>
            <dd>
            <% project.proposals.each do |proposal| %>
              <li><%= render :partial => "proposals/details_popover", :locals => {proposal: proposal, placement: "bottom"} %></li>
            <% end %>
            </dd>
          <% end %>

          <% if current_user.isAdmin? %>
            <dt><strong>Project Status:</strong></dt>
            <dd><%= ProjectStatus.find(project.project_status_id).name %></dd>
          <% end %>

          <% if current_user.isFaculty? %>
            <dt><strong>Project Status:</strong></dt>
            <dd>
            <% if project.schools.include? current_user.school %>
            <div class="btn-group">
              <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#"><%= "#{project.faculty_decision(current_user).stringify} " %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% if project.faculty_decision(current_user).decision %>
                  <li><%= link_to "Reject", faculty_reject_project_path(project, faculty_id: current_user.id) %></li>
                <% else %>
                  <li><%= link_to "Approve", faculty_approve_project_path(project, faculty_id: current_user.id) %></li>
                <% end %>
              </ul>
            </div>
          <% else %>
            N/A
          <% end %>
            </dd>
          <% end %>

        </dl>
      </div>

      <div class="tab-pane" id="more_info">
        <dl class="dl-horizontal">

          <dt><strong>Background:</strong></dt>
          <dd><%= project.background %></dd>

          <dt><strong>Concept:</strong></dt>
          <dd><%= project.concept %></dd>

          <dt><strong>Design:</strong></dt>
          <dd><%= project.design %></dd>

          <dt><strong>Skills:</strong></dt>
          <dd><%= project.skills %></dd>

          <dt><strong>Solutions:</strong></dt>
          <dd><%= project.solutions %></dd>

          <dt><strong>NDA Required:</strong></dt>
          <dd><%= project.nda_required %></dd>

          <dt><strong>Interest in IP Assignment:</strong></dt>
          <dd><%= project.funding_commitment %></dd>

        </dl>
      </div>

    </div>
  </div>
</div>

