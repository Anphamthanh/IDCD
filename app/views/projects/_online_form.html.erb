<%= form_for @project, :html => { :class => 'form-horizontal', :multipart => :true } do |f| %>

  <div class="row-fluid">

    <div class="span6">
      <div class="well">

        <h3>Company Information</h3>
        <div class="control-group">
          <%= label_tag 'name', 'Company Name', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :name, :class => 'number_field', :required => true %>
          </div>
        </div>

        <h5>Technical Contact</h5>
        <div class="control-group">
          <%= label_tag 'technical_name', 'Name', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :technical_name, :class => 'number_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag 'technical_designation', 'Designation', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :technical_designation, :class => 'number_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag 'technical_email', 'Email', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :technical_email, :class => 'number_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag 'technical_phone', 'Phone Number', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :technical_phone, :class => 'number_field', :required => true %>
          </div>
        </div>

        <h5>Director Contact</h5>
        <div class="control-group">
          <%= label_tag 'director_name', 'Name', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :director_name, :class => 'number_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag 'director_designation', 'Designation', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :director_designation, :class => 'number_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag 'director_email', 'Email', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :director_email, :class => 'number_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag 'director_phone', 'Phone Number', :class => 'control-label' %>
          <div class="controls">
            <%= text_field :company, :director_phone, :class => 'number_field', :required => true %>
          </div>
        </div>

      </div>
    </div>

    <div class="span6">
      <div class="well">

        <h3>Project Information</h3>
        <div class="control-group">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :class => 'text_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :background, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :background, :class => 'text_area', :rows => '3', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :concept, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :concept, :class => 'text_area', :rows => '3', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :design, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :design, :class => 'text_area', :rows => '3', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :skills, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :skills, :class => 'text_area', :rows => '3', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :solutions, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :solutions, :class => 'text_area', :rows => '3', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :nda_required, "NDA required", :class => 'control-label' %>
          <div class="controls">
            <%= f.check_box :nda_required, :class => 'check_box' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :funding_commitment, :class => 'control-label' %>
          <div class="controls">
            <%= f.check_box :funding_commitment, :class => 'check_box' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit Project", :class => 'btn btn-primary', name: "online" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), projects_path, :class => 'btn' %>
  </div>
<% end %>
