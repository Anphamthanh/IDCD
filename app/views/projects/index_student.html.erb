<h1>Projects</h1>
<br>
<center><%= link_to "Submit A New Project", new_project_path, :class => 'btn btn-primary' %></center>
<br>
<div class="row-fluid">
  <div class="span12">
    <ul class="nav nav-tabs">
      <li><a href="#all" data-toggle="tab">All</a></li>
      <li class="active"><a href="#available" data-toggle="tab">Available</a></li>
    </ul>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="tab-content">

      <div class="tab-pane active" id="available">

        <div class="row-fluid">
          <div class="span12">
            <% if @available_projects.count > 0 %>
              <%= render :partial => "summary_table", :locals => {:projects => @available_projects} %>
            <% elsif !current_user.is_owner? %>
              <h5>Projects become available upon group formation. To browse projects, use the "All" tab.</h5>
            <% else %>
              <h5>No projects available. Please contact your faculty or admin.</h5>
            <% end %>
          </div>
        </div>

      </div>

      <div class="tab-pane" id="all">

        <div class="row-fluid">
          <div class="span12">
            <%= render :partial => "summary_table", :locals => {:projects => @all_projects} %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

