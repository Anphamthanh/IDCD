<h1>Projects</h1>
<br>
<center><%= link_to "Submit A New Project", new_project_path, :class => 'btn btn-primary' %></center>
<br>
<div class="row-fluid">
  <div class="span12">
    <ul class="nav nav-tabs">
      <li><a href="#all" data-toggle="tab">All</a></li>
      <li class="active"><a href="#available" data-toggle="tab">Available</a></li>
    </ul>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="tab-content">

      <div class="tab-pane active" id="available">

        <div class="row-fluid">
          <div class="span12">
            <%= render :partial => "school_summary", :locals => {:projects => @available_projects} %>
          </div>
        </div>

        <hr />

        <% @available_projects.each do |project| %>
          <div class="row-fluid">
            <div class="span12 well">

              <div class="row-fluid">
                <div class="span11">
                  <%= render :partial => "summary", :locals => {:project => project} %>
                </div>
                <div class="span1">
                  <%= render :partial => "actions", :locals => {:project => project} %>
                </div>
              </div>

            </div>
          </div>
        <% end %>

      </div>

      <div class="tab-pane" id="all">

        <div class="row-fluid">
          <div class="span12">
            <%= render :partial => "school_summary", :locals => {:projects => @all_projects} %>
          </div>
        </div>

        <hr />

        <% @all_projects.each do |project| %>
          <div class="row-fluid">
            <div class="span12 well">

              <div class="row-fluid">
                <div class="span11">
                  <%= render :partial => "summary", :locals => {:project => project} %>
                </div>
                <div class="span1">
                  <%= render :partial => "actions", :locals => {:project => project} %>
                </div>
              </div>

            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>




