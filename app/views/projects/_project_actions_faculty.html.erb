<% if project.does_faculty_approve(logged_in_user) %>

    <div class="row-fluid">
        <div class="span12">
            <strong>Status: </strong>Approved
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <%= link_to "Reject Project", faculty_reject_project_path(project, :faculty_id => logged_in_user.id), :class => "btn btn-danger" %>
        </div>
    </div>

<% else %>

    <div class="row-fluid">
        <div class="span12">
            <strong>Status: </strong>Rejected
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <%= link_to "Approve Project", faculty_approve_project_path(project, :faculty_id => logged_in_user.id), :class => "btn btn-success" %>
        </div>
    </div>

<% end %>
