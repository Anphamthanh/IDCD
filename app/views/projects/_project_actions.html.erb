<% if project.incomplete? %>
    <div class="row-fluid">
        <div class="span12">
            <h5>Some of the project details are missing. Please complete to be able to accept/reject the project.</h5>
            <%= link_to "Complete Details", complete_project_path(project), :class => 'btn btn-info' %>
        </div>
    </div>

<% else %> 
    <div class="row-fluid">
        <div class="span12">
            <%= link_to "Edit Details", edit_project_path(project), :class => 'btn' %>
            <%= link_to "Accept", admin_accept_project_path(project), :class => 'btn btn-success' %>
            <%= link_to "Reject", admin_reject_project_path(project), :class => 'btn btn-danger' %>
        </div>
    </div>
<% end %>

