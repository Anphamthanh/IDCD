<% if project.incomplete? %>
    <div class="row-fluid">
        <div class="span12">
            <h5>Some of the project details are missing. Please complete to be able to accept/reject the project.</h5>
            <%= link_to "Complete Details", complete_project_path(project), :class => 'btn btn-info' %>
        </div>
    </div>

<% else %> 
    <div class="row-fluid">
        <div class="span12">
            <%= link_to "View All Details", project_path(project), :class => 'btn' %>
            <%= link_to "Edit Details", edit_project_path(project), :class => 'btn' %>
        </div>
    </div>

    <hr />

    <div class="row-fluid">
        <div class="span12">
            <strong>Current status: </strong>
            <%= project.project_status_name %>
        </div>
    </div>

    <hr />

    <% if flash[:error] %>
        <% flash[:error].each do |message| %>
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Warning!</strong> <%= message %>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>

    <% if project.rejected? or project.complete? %>
        <div class="row-fluid">
            <div class="span12">
                <%= form_for project, :url => admin_accept_project_path(project), :method => "get" do |f| %>
                    <div class="row-fluid">
                        <div class="span3">
                            <h5>Assign Schools</h5>
                            <div class="control-group">
                                <div class="controls">
                                    <% School.all.each do |s| %>
                                        <label class="checkbox">
                                            <%= check_box_tag 'selectedSchools[]', s.id, false, :type => "checkbox" %><%= s.name %><br />
                                        </label>
                                    <% end %>
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <h5>Assign Semester</h5>
                            <div class="control-group">
                                <div class="controls">
                                    <% Semester.active.each do |s| %>
                                        <label class="radio">
                                            <%= radio_button_tag 'selectedSemester[]', s.id, false, :type => "radio" %><%= s.name %><br />
                                        </label>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <%= submit_tag "Accept", :class => 'btn btn-success' %>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>

    <% if project.accepted? %>
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span3">
                        <h5>Assigned Schools</h5>
                        <ul>
                            <% project.schools.each do |s| %>
                                <li><%= s.name %></li>
                            <% end %>
                        </ul>
                    </div>

                    <div class="span3">
                        <h5>Assigned Semester</h5>
                        <%= project.semester.name %>
                    </div>
                </div>
                <div class="form-actions">
                    <%= link_to "Reject", admin_reject_project_path(project), :class => 'btn btn-danger' %>
                </div>
            </div>
        </div>
    <% end %>


<% end %>
