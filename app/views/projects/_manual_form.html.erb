<%= form_for @project, :html => { :class => 'form-horizontal', :multipart => :true } do |f| %>

  <div class="row-fluid">
    <div class="span12">
      <h4>Download</h4>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <%= link_to "Printable Project Submission Form", root_url+"/forms_and_files/Capstone_Project_Submission_Form.doc" %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <h4>Upload</h4>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span5">
      <div class="control-group">
        <%= f.label :namei, "Project Name", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field', :required => true %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :formi, "Upload Form", :class => 'control-label' %>
        <div class="controls">
          <%= f.file_field :form, :required => true %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit Project", :class => 'btn btn-primary', name: "manual" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), projects_path, :class => 'btn' %>
  </div>
<% end %>
