<%= form_for @project, :html => { :class => 'form-horizontal', :multipart => :true } do |f| %>

  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        <h3>Project Information</h3>
        <div class="control-group">
          <%= f.label "Project Title", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :class => 'text_field', :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label "Background / Need", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :background, :class => 'text_area', :rows => '3', :style => "width: 90%", :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :concept, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :concept, :class => 'text_area', :rows => '3', :style => "width: 90%", :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label "Design Considerations", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :design, :class => 'text_area', :rows => '3', :style => "width: 90%", :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label "Desired skills, expertise, schools", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :skills, :class => 'text_area', :rows => '3', :style => "width: 90%", :required => true %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label "Prefered solution (proof of concept, working prototype)", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :solutions, :class => 'text_area', :rows => '3', :style => "width: 90%", :required => true %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit Project", :class => 'btn btn-primary', name: "student" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), projects_path, :class => 'btn' %>
  </div>
<% end %>
