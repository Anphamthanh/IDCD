<div class="row-fluid">
    <div class="span8">
        <div class="page-header">
            <h1>List of Projects</h1>
        </div>
    </div>

    <div class="span4" style="text-align: right">
        <div class="page-header">
            <h1><%= link_to "New Project", new_project_path, :class => 'btn btn-primary' %></h1>
        </div>
    </div>
</div>


<% @projects.each do |project| %>
    <div class="row-fluid">
        <div class="span12 well">

            <div class="row-fluid">
                <div class="span12">
                    <h4><%= project.name %></h4>
                </div>
            </div>

            <hr />

            <div class="row-fluid">
                <div class="span12">
                    <%= render :partial => "project_details", :locals => {:project => project} %>
                </div>
            </div>

        </div>
    </div>
<% end %>


