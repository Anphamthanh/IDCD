<%- model_class = Project -%>
<div class="page-header">
    <h1>List of Projects</h1>
</div>


<!--  ADMIN  -->
<% @projects.each do |project| %>
    <div class="row-fluid">
        <div class="span12 well">

            <div class="row-fluid">
                <div class="span12">
                    <h4><%= project.name %></h4>
                </div>
            </div>

            <hr />

            <div class="row-fluid">
                <div class="span12">
                    <%= render :partial => "project_details", :locals => {:project => project} %>
                </div>
            </div>

        </div>
    </div>
<% end %>


<%= link_to t('.new', :default => t("helpers.links.new")), new_project_path, :class => 'btn btn-primary' %>
