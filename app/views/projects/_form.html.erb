<% if current_user %>
<br>
<div class="row-fluid">
  <div class="span12">
    Complete the form below to submit a project. Please <strong>DO NOT </strong> include any proprietary or confidental information.<br />
  </div>
</div>

<br />  
  <%= render :partial => 'online_form_student' %>

<% else %>
<br>
<div class="row-fluid">
  <div class="span12">
    Complete the form below or upload a copy of the completed form to submit a project. Please <strong>DO NOT </strong> include any proprietary or confidental information.
  </div>
</div>

<br />  
  <div class="row-fluid">
    <div class="span12">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#online" data-toggle="tab">Fill out an Online Form</a></li>
        <li><a href="#manual" data-toggle="tab">Complete Form by Hand and Upload</a></li>
      </ul>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="online">
          <%= render :partial => 'online_form' %>
        </div>
        <div class="tab-pane fade in" id="manual">
          <%= render :partial => 'manual_form' %>
        </div>
      </div>
    </div>
  </div>

<% end %>
