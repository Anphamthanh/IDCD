<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.name %></td>
    <td><%= link_to 'Show', page_picture_path(@page, picture) %></td>
    <td><%= link_to 'Edit', edit_page_picture_path(@page, picture) %></td>
    <td><%= link_to 'Destroy', page_picture_path(@page, picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

