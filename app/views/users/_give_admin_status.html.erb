<h3>Add Admin</h3>

<%= form_tag controller: "users", action: "give_admin_status" do %>
  <%= text_field_tag 'gtusername' %>
  <%= submit_tag %>
<% end %>

<% if User.find_all_by_admin(true).count == 0 %>
  <div class="row-fluid">
    <div class="span12">
      No Admins Assigned
    </div>
  </div>
<% else %>
  <% User.find_all_by_admin(true).each do |user| %>
    <div class="row-fluid">
      <div class="span11">
        <%= link_to "#{user.firstname} #{user.lastname} (#{user.gtusername})", user_path(user) %>
      </div>
      <div class"span1">
        <%= link_to "X", remove_admin_status_user_path(user) %>
      </div>
    </div>
  <% end %>
<% end %>

