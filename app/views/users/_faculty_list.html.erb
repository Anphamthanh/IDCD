<h3>Faculty List</h3>

<% if Faculty.all.count == 0 %>
  <div class="row-fluid">
    <div class="span12">
      No Faculty Assigned
    </div>
  </div>
<% else %>
  <% Faculty.all.each do |user| %>
    <div class="row-fluid">
      <div class="span11">
        <%= link_to "#{user.firstname} #{user.lastname} (#{user.gtusername})", user_path(user) %>
      </div>
      <div class"span1">
        <%= link_to "X", delete_faculty_user_path(user) %>
      </div>
    </div>
  <% end %>
<% end %>

