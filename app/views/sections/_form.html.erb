<%= form_for [@semester, @section], :html => { :class => 'form-horizontal' } do |f| %>
    <% if @section.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

            <ul>
                <% @section.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>


    <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :name, :class => 'text_field' %>
        </div>
    </div>

    <%= f.hidden_field :semester_id %>

    <div class="control-group">
        <%= f.label :school_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.select "school_id", School.find(:all).collect {|u| [u.name, u.id]}, :selected => @section.school_id %>
        </div>
    </div>


    <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), semester_path(@semester), :class => 'btn' %>
    </div>
<% end %>


