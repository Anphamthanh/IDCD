<h4>Items Related to This Page</h4>

<table>
  <tr>
    <th>Page</th>
    <th>Item</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @page_items.each do |page_item| %>
  <tr>
<% if page_item.page_id == params[:id] %>
    <td><%= page_item.page_id %></td>
    <td><%= page_item.item_id %></td>
    <td><%= page_item.type %></td>
    <td><%= link_to 'Show', page_item %></td>
   
 <td><%= link_to 'Edit', edit_item_page_item_path(page_item.id) %></td>

    <td><%= link_to 'Destroy', page_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end %>
  </tr>
<% end %>
</table>
