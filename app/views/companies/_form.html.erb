<%= form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :semester_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :semester_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technical_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :technical_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technical_designation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :technical_designation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technical_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :technical_email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technical_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :technical_phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :director_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :director_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :director_designation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :director_designation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :director_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :director_email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :director_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :director_phone, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn' %>
  </div>
<% end %>
