<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @company.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:semester_id) %>:</strong></dt>
  <dd><%= @company.semester_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technical_name) %>:</strong></dt>
  <dd><%= @company.technical_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technical_designation) %>:</strong></dt>
  <dd><%= @company.technical_designation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technical_email) %>:</strong></dt>
  <dd><%= @company.technical_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technical_phone) %>:</strong></dt>
  <dd><%= @company.technical_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:director_name) %>:</strong></dt>
  <dd><%= @company.director_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:director_designation) %>:</strong></dt>
  <dd><%= @company.director_designation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:director_email) %>:</strong></dt>
  <dd><%= @company.director_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:director_phone) %>:</strong></dt>
  <dd><%= @company.director_phone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              companies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_company_path(@company), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              company_path(@company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
