  <tr>
    <td><%= group_member.group_id %></td>
    <td><%= group_member.student_id %></td>
    <td><%= group_member.requested %></td>
    <td><%= group_member.invited %></td>
    <td><%= group_member.member %></td>
    <td><%= link_to 'Show', group_member %></td>
    <td><%= link_to 'Edit', edit_group_member_path(group_member) %></td>
