<h1>Listing texts</h1>

<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @texts.each do |text| %>
  <tr>
    <td><%= text.description %></td>
    <td><%= link_to 'Show', page_text_path(@page,text) %></td>
    <td><%= link_to 'Edit', edit_page_text_path(@page,text) %></td>
    <td><%= link_to 'Destroy', page_text_path(@page, text), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

