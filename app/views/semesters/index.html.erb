<div class="row-fluid">
    <div class="span12">
        <div class="page-header">
            <h1>Semester Settings</h1>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <h4>Select a semester from the list below, or <%= link_to "create a new one.", new_semester_path %><h4>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <ul>
            <% @semesters.each do |semester| %>
                <li><%= link_to semester.name, semester_path(semester) %></li>
            <% end %>
        </ul>
    </div>
</div>
