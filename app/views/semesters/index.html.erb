<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h1>Semester Settings</h1>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h4>Select a semester from the list below, or <%= link_to "create a new one.", new_semester_path %></h4>
  </div>
</div>

<div class="row-fluid" style="margin-top: 25px">
  <div class="offset0 span12">

    
    <div class="row-fluid">
      <% count = 0 %>
      <% @semesters.each do |semester| %>

        <% if count % 3 == 0 %>
          </div>
          <div class="row-fluid">
        <% end %>

        <div class="span4 well">
          <h3><center><%= link_to semester.name, semester_path(semester) %></center></h3>
        </div>

        <% count = count + 1 %>
      <% end %>
    </div>


  </div>
</div>
