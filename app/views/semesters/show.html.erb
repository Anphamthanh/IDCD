<div class="row-fluid">
    <div class="span12 page-header">
        <h1><%= @semester.name %> Settings</h1>
    </div>
</div>


<div class="row-fluid">
    <div class="span12">

        <div class="row-fluid">
            <div class="span12">
                <h4>General Information</h4>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span10">
                <dl class="dl-horizontal">
                    <dt><strong>Name:</strong></dt>
                    <dd><%= @semester.name %></dd>
                    <dt><strong>Start:</strong></dt>
                    <dd><%= @semester.start_date %></dd>
                    <dt><strong>End:</strong></dt>
                    <dd><%= @semester.end_date %></dd>
                </dl>
            </div>
            <div class="span2">
                <%= link_to "Edit", edit_semester_path(@semester) %>
            </div>
        </div>

    </div>
</div>


<hr />


<div class="row-fluid">
    <div class="span12">

        <div class="row-fluid">
            <div class="span12">
                <h4>Manage Sections</h4>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span8 offset2">
                <% if @semester.sections.count == 0 %>
                    No sections exist.
                <% else %>
                    <%= render :partial => 'sections/semester_sections_show' %>
                <% end %>
            </div>
            <div class="span2">
                <%= link_to "Add Section", new_semester_section_path(@semester) %>
            </div>
        </div>

    </div>
</div>


<hr />


<div class="row-fluid">
    <div class="span12">

        <div class="row-fluid">
            <div class="span12">
                <h4>Sections Summary</h4>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span8 offset2">
                <% if @semester.sections.count == 0 %>
                    No sections exist.
                <% else %>
                    <%= render :partial => 'semesters/section_summary' %>
                <% end %>
            </div>
            <div class="span2">
            </div>
        </div>

    </div>
</div>


<hr />


<div class="row-fluid">
    <div class="span12">

        <div class="row-fluid">
            <div class="span12">
                <h4>Assigning Faculty to Sections</h4>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span8 offset2">
                <% if @semester.sections.count == 0 %>
                    No sections exist.
                <% else %>
                    <%= render :partial => 'semesters/section_faculties' %>
                <% end %>
            </div>
            <div class="span2">
            </div>
        </div>

    </div>
</div>


<div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")), semesters_path, :class => 'btn'  %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        semester_path(@semester),
        :method => 'delete',
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-danger' %>
    </div>
