<div class="row-fluid">
  <div class="span12 page-header">
    <h1><%= @semester.name %> Settings</h1>
  </div>
</div>


<div class="row-fluid">
  <div class="span12">

    <div class="row-fluid">
      <div class="span12">
        <h4>General Information</h4>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span10">
        <dl class="dl-horizontal">
          <dt><strong>Name:</strong></dt>
          <dd><%= @semester.name %></dd>
          <dt><strong>Start:</strong></dt>
          <dd><%= @semester.start %></dd>
          <dt><strong>End:</strong></dt>
          <dd><%= @semester.end %></dd>
        </dl>
      </div>
      <div class="span2">
        <%= link_to "Edit", edit_semester_path(@semester) %>
      </div>
    </div>

  </div>
</div>

<hr />

<div class="row-fluid">
  <div class="span12">

    <div class="row-fluid">
      <div class="span12">
        <h4>Sections</h4>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span8 offset2">
        <% if @semester.sections.count == 0 %>
          No sections exist.
        <% else %>
          <%= render :partial => 'sections/semester_sections_show' %>
        <% end %>
      </div>
      <div class="span2">
        <%= link_to "Add Section", new_semester_section_path(@semester) %>
      </div>
    </div>

  </div>
</div>

<hr />

<div class="row-fluid">
  <div class="span12">

    <div class="row-fluid">
      <div class="span12">
        <h4>Assigning Faculty to Sections</h4>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span8 offset2">
        <% if @faculty.count == 0 %>
          No registered faculty.
        <% else %>


          <!-- CONVERT TO PARTIAL -->

          <div class="row-fluid">
            <div class="span4">
              <strong>Name</strong>
            </div>
            <div class="span4">
              <strong>Current Section</strong>
            </div>
            <div class="span4">
              <strong>Options</strong>
            </div>
          </div>

          <% @faculty.each do |faculty| %>
            <div class="row-fluid">
              <div class="span4">
                <%= faculty.email %>
              </div>
              <div class="span4">
                <% faculty_sections = faculty.assigned_sections_for_semester(@semester) %>
                <% if faculty_sections.count == 0 %>
                  -
                <% else %>
                  <% faculty_sections.each do |faculty_section| %>
                    <%= Section.find(faculty_section.first.section_id).name %>
                  <% end %>
                <% end %>
              </div>
              <div class="span4">
                <%= link_to "Add to" %> 
                |
                <%= link_to "Remove from" %> 
              </div>
            </div>
          <% end %>

          <!-- CONVERT TO PARTIAL -->


        <% end %>
      </div>
      <div class="span2">
        <%= link_to "Add Faculty (soon)" %>
      </div>
    </div>

  </div>
</div>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), semesters_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    semester_path(@semester),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
  </div>
